{
  "id": "work_report",
  "name": "工作报告",
  "description": "标准工作报告模板，包含标题、作者、部门、概述、工作内容和总结",
  "variables": {
    "title": {"type": "string", "description": "报告标题"},
    "author": {"type": "string", "description": "作者"},
    "department": {"type": "string", "description": "部门"},
    "summary": {"type": "string", "description": "工作概述"},
    "sections": {"type": "array", "description": "工作内容章节"},
    "conclusion": {"type": "string", "description": "总结与展望"}
